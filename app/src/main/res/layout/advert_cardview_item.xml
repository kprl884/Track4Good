<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="60dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_margin="@dimen/_5sdp">

            <ImageView
                android:id="@+id/item_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:padding="@dimen/_3sdp"
                android:scaleType="fitXY"
                app:cardCornerRadius="35dp"
                app:layout_constraintBottom_toTopOf="@id/item_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/evv" />


            <ImageView
                android:id="@+id/item_save_button"
                android:layout_width="31dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/save"
                android:padding="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@id/item_iv"
                app:layout_constraintTop_toTopOf="@id/item_iv" />

            <TextView
                android:id="@+id/item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/raleway_medium"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/profile_text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_iv"
                tools:text="açıklamaaçıklamaaçıklamaaçıklamaaçıklamaaçıklamaaçıklamaaçıklama" />

            <Button
                android:id="@+id/item_bagis_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:backgroundTint="@color/button_color"
                android:text="Bagış yap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_description" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>